@using NLimit.Web.ClassServices

@{
    ViewData["Title"] = "Math Attestations";
    ViewData["ActivePage"] = ManageNavigationPages.Attestations;
}

<div>
    <partial name="_CourseNavigation" />
</div>

<style>
    .content-wrapper {
        background-color: rgba(255, 255, 255, 0.85); /* Светло-серый цвет с небольшой прозрачностью */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        margin-top: 20px;
    }

    .dropdown-menu {
        background-color: rgba(255, 255, 255, 1); /* Непрозрачный фон */
        color: #333;
    }

    .input-group-text {
        cursor: pointer;
    }

    .text-dark {
        color: #000 !important; /* Черный цвет для заголовка */
    }
</style>

<div class="container content-wrapper">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-dark">Аттестации по курсу "Математика"</h1>
            <div class="table-responsive">
                <table class="table table-striped table-hover mt-4">
                    <thead>
                        <tr>
                            <th>Номер</th>
                            <th>Наименование дисциплины</th>
                            <th>Статус</th>
                            <th>Аттестуемые</th>
                            <th>Экзаменатор</th>
                            <th>Дата аттестации</th>
                            <th>Описание</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2012253</td>
                            <td>Математический анализ</td>
                            <td>Запланирована</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        Список аттестуемых
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><span class="dropdown-item-text">Павлов Глеб Ильич</span></li>
                                        <li><span class="dropdown-item-text">Курсатова Анна Викторовна</span></li>
                                        <li><span class="dropdown-item-text">Абдраман Буба</span></li>
                                    </ul>
                                </div>
                            </td>
                            <td>Иванов И.И.</td>
                            <td>
                                <div class="input-group date">
                                    <input type="text" class="form-control datepicker" placeholder="Выберите дату">
                                    <span class="input-group-text"><i class="bi bi-calendar calendar-icon"></i></span>
                                </div>
                            </td>
                            <td>Аттестация по основным темам математического анализа.</td>
                        </tr>
                        <tr>
                            <td>2711126</td>
                            <td>Геометрия</td>
                            <td>Проведена</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                        Список аттестуемых
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                                        <li><span class="dropdown-item-text">Чурилова Ольга</span></li>
                                        <li><span class="dropdown-item-text">Копылов Илья Васильевич</span></li>
                                        <li><span class="dropdown-item-text">Дуров Олег Витальевич</span></li>
                                    </ul>
                                </div>
                            </td>
                            <td>Петров П.П.</td>
                            <td>
                                <div class="input-group date">
                                    <input type="text" class="form-control datepicker" placeholder="Выберите дату">
                                    <span class="input-group-text"><i class="bi bi-calendar calendar-icon"></i></span>
                                </div>
                            </td>
                            <td>Аттестация по теоретической и практической геометрии.</td>
                        </tr>
                        <tr>
                            <td>0121954</td>
                            <td>Тригонометрия</td>
                            <td>Запланирована</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton3" data-bs-toggle="dropdown" aria-expanded="false">
                                        Список аттестуемых
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton3">
                                        <li><span class="dropdown-item-text">Сафрошенов Виталий</span></li>
                                        <li><span class="dropdown-item-text">Колмогоров Олег Петрович</span></li>
                                        <li><span class="dropdown-item-text">Анонсеева Ольга Александровна</span></li>
                                    </ul>
                                </div>
                            </td>
                            <td>Сидоров С.С.</td>
                            <td>
                                <div class="input-group date">
                                    <input type="text" class="form-control datepicker" placeholder="Выберите дату">
                                    <span class="input-group-text"><i class="bi bi-calendar calendar-icon"></i></span>
                                </div>
                            </td>
                            <td>Аттестация по основам тригонометрии и её приложениям.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

<script>
    $(function () {
        $(".datepicker").datepicker({
            autoclose: true,
            todayHighlight: true
        });

        $(".calendar-icon").click(function () {
            $(this).closest(".date").find(".datepicker").datepicker("show");
        });
    });
</script>